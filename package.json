{
  "name": "my-react-boilerplate",
  "scripts": {
    "start": "webpack-dev-server --config ./webpack/webpack.dev.js --hot",
    "build": "NODE_ENV=production webpack --config ./webpack/webpack.prod.js",
    "build:compressed": "COMPRESS=true yarn build",
    "test": "standard",
    "version-bump": "npm version patch && git push && git push --tags",
    "publish": "yarn && UPLOAD=true yarn run build:compressed",
    "publish:auto": "yarn test && yarn version-bump && yarn run publish"
  },
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "standard": {
    "ignore": [
      "**/dist",
      "**/*.html",
      "**/*.json",
      "**/ga.js",
      "**/*.ico"
    ]
  },
  "dependencies": {
    "lodash": "^4.14.1",
    "material-ui": "~0.15.4",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-tap-event-plugin": "^2.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.3.15",
    "babel-loader": "^7.1.0",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-es2016": "^6.11.3",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-2": "^6.13.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "clean-webpack-plugin": "^0.1.16",
    "compression-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.28.0",
    "image-webpack-loader": "^3.3.1",
    "json-loader": "^0.5.4",
    "less": "^2.7.1",
    "lodash-webpack-plugin": "^0.11.4",
    "node-libs-browser": "^0.5.2",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "sass-loader": "^6.0.6",
    "standard": "^10.0.2",
    "style-loader": "^0.18.2",
    "uglify-js": "^2.7.3",
    "webpack": "^3.0.0",
    "webpack-bundle-analyzer": "^2.8.2",
    "webpack-dev-server": "^2.6.0",
    "webpack-md5-hash": "^0.0.5",
    "webpack-merge": "^4.1.0",
    "webpack-s3-plugin": "^1.0.0-rc.0"
  }
}
